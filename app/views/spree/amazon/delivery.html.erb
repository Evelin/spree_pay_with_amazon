<% if current_order.has_step?("delivery") %>
  <%= form_for current_order, :url => confirm_amazon_order_path, :method => :post do |form| %>
    <%= render partial: 'spree/checkout/delivery', locals: {form: form} %>
  <% end %>
<% else %>
  <%= form_for current_order, :url => confirm_amazon_order_path, :method => :post do |form| %>
    <% default_delivery_option = current_order.selected_delivery_option.presence || (vanity_tag && vanity_shipping_option) || current_order.expedited_delivery_options.first.to_s %>
    <%= hidden_field_tag 'order[selected_delivery_option]', default_delivery_option %>
  <% end %>
  <aside class="order-summary pull-right">
    <%= render partial: 'spree/checkout/summary', locals: { :order => current_order} %>
  </aside>
  <br />

  <div class="form-buttons" data-hook="buttons">
    <%= submit_tag Spree.t(:place_order), :class => 'continue button primary' %>
    <script>Spree.disableSaveOnClick();</script>
  </div>
<% end %>
