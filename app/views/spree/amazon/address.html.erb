<% content_for :head do %>
  <meta name="viewport" content="width-device-width, initial-scale=1.0, maximum-scale=1.0"/>

  <script type='text/javascript'>
    window.onAmazonLoginReady = function() {
      amazon.Login.setClientId('<%= Spree::Config[:amazon_client_id] %>');
      $('#continue_to_delivery').click();
    };
  </script>
  <script type='text/javascript'
    src='https://static-na.payments-amazon.com/OffAmazonPayments/us/<%= Spree::Gateway::Amazon.first.preferred_test_mode ? 'sandbox/' : '' %>js/Widgets.js?sellerId=<%= Spree::Config[:amazon_merchant_id] %>'>
  </script>

  <script>
    $( document ).ready(function() {
      new OffAmazonPayments.Widgets.AddressBook({
        sellerId: '<%= Spree::Config[:amazon_merchant_id] %>',
        agreementType: 'orderreference',
        onOrderReferenceCreate: function(orderReference) {
          order_reference = orderReference.getAmazonOrderReferenceId();
          console.log('onOrderReferenceCreate')
          console.log(order_reference.getAmazonOrderReferenceId)

          $.ajax({
            type: 'GET',
            url: "<%= get_selected_address_amazon_order_path %>",
            data: { order_reference: orderReference.getAmazonOrderReferenceId }
          }).done(function(data){
            currentShippingCountryISO = data.selectedCountryISO
            currentShippingStateName = data.selectedStateName
          })
        },
        onAddressSelect: function(orderReference) {
          console.log('onAddressSelect')
          console.log(orderReference.getAmazonOrderReferenceId)

          $.ajax({
            type: 'GET',
            url: "<%= get_selected_address_amazon_order_path %>",
            data: { order_reference: orderReference.getAmazonOrderReferenceId }
          }).done(function(data){
            currentShippingCountryISO = data.selectedCountryISO
            currentShippingStateName = data.selectedStateName
          })
          <%= render 'spree/amazon/payment' %>
        },
        design: {
          designMode: 'responsive'
        },
        onError: function(error) {
         console.log(error.getErrorMessage());
        }
      }).bind("addressBookWidgetDiv");

      $('#continue_to_delivery').click();
      $('#continue_to_delivery').click(function () {
        $("#deliveryOptionDiv").html('Loading...');
      });
      $('#continue_to_delivery').on('ajax:success', function(evt, data, status, xhr){
        console.log(data)
        $("#deliveryOptionDiv").html(data);
      }).bind("ajax:error", function(evt, data, status, xhr){
        $("div#errors p").text(data);
      });

      /*function getSelectedAddress(orderReference) {
        $.ajax({
          type: 'GET',
          url: "<%= get_selected_address_amazon_order_path %>",
          data: { order_reference: orderReference }
        }).done(function(data){
          currentShippingCountryISO = data.selectedCountryISO
          currentShippingStateName = data.selectedStateName
        })
      }*/
    });
  </script>
<% end %>

<div id="addressBookWidgetDiv">
</div>

<div id="walletWidgetDiv">
</div>


  <div class="form-buttons" data-hook="buttons" id="submit_form" style="display: none;">
    <%= link_to Spree.t(:save_and_continue), delivery_amazon_order_path, :class => 'continue button primary', :id => 'continue_to_delivery', :remote => true %>
  </div>

<div id="deliveryOptionDiv">
  Loading...
</div>
